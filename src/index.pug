doctype html
html
	head
		- var site = { title: 'Stranger Things 2 Countdown', url: 'http://www.strangerthingscountdown.com', image: 'http://strangerthings.surge.sh/assets/images/og-image.jpg', favicon: 'http://strangerthings.surge.sh/assets/images/favicon.png', description: 'A Stranger Things 2 Countdown in VR.'}
		each val, key in site
			meta(property='og:'+key, content=val)

		- var tCard = { description: site.description, title:site.title, site: '@studiozeroco', card: 'summary_large_image', image: site.image}
		
		each val, key in tCard
			meta(name='twitter:'+key, content=val)

	meta(charset='utf-8')
	title #{site.title}
	meta(name='description', content="#{site.description}")
	script(src="assets/js/main.js")
	link(rel="stylesheet", href="assets/css/main.css")

	body
		
		img.netflix(src="assets/images/netflix.png")
		.share
			a(class="share-btn share-btn-branded share-btn-facebook" href="#" title="Share on Facebook")
				span(class="share-btn-icon")
			a(class="share-btn share-btn-branded share-btn-twitter" href="#" title="Share on Twitter")
				span(class="share-btn-icon")


		a-scene()
			a-assets
				a-asset-item#thingsFont(src="assets/fonts/font.json")
				img#background(src="http://res.cloudinary.com/studio-zero/image/upload/v1487668256/background_rljwo7.png")
				//- audio#sound(src="assets/sounds/underwater.mp3" loop autoplay)

			a-entity#person(position="0 1.67 0")
				a-entity(camera, look-controls)

			a-sky(src="#background")
			a-entity#particle(position="0 0 0" particle-system="preset: dust; type:3; opacity:0.2;size:8;accelerationValue:0 0 0.01; rotationAngle:200; rotationAxis:z; maxParticleCount:50;")

			a-entity#two(text="text: 2; font: #thingsFont;" scale="5 5 2" position="1 0 5" rotation="0 180 0" material="color:#650505;metalness:0.5; roughness: 0.2; sphericalEnvMap: #background;")
			
			a-entity#countdown(position="-2.5 -0.2 -8")
				a-entity(countdown text="text: ...starting countdown; font:#thingsFont" position="0 0 0" material="color:#650505;")

			a-entity(geometry="primitive:plane;height:0.75;width:1;" material="shader:gif;src:url(http://res.cloudinary.com/studio-zero/image/upload/v1487668273/st_rklgjf.gif);opacity:0.5;", position="2.4 0.4 2", rotation="0 230 0")


